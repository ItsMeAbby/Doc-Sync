{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fastapi_backend/app/main.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/fastapi_backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/fastapi_backend"
            },
            "justMyCode": false,
            "python": "${workspaceFolder}/fastapi_backend/.venv/bin/python"
        },
        {
            "name": "Debug FastAPI with uv",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/fastapi_backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/fastapi_backend"
            },
            "justMyCode": false
        }
    ]
}
